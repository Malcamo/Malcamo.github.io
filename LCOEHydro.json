{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Projected Cost of Hydroower",
    "subtitle": [
      "LCOE of Utility-Level Solar Power, $/MWh",
      "Source: NREL Annual Technology Baseline 2024"
    ],
    "color": "purple"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Malcamo/Malcamo.github.io/refs/heads/main/hydropower_LCOE_cleaned.csv"
  },
  "view": {"fill": "white", "strokeOpacity": 0},
  "width": 300,
  "background": "#d2ffd2",
  "encoding": {
    "x": {"field": "Year", "type": "temporal", "title": null},
    "y": {"field": "Value", "type": "quantitative", "title": null},
    "color": {
      "scale": {"range": ["darkgreen", "teal", "darkblue"]},
      "condition": {
        "param": "hover",
        "field": "Scenario",
        "type": "nominal",
        "legend": null
      },
      "value": "grey"
    },
    "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}
  },
  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "value": [{"Scenario": "Advanced"}],
          "select": {
            "type": "point",
            "fields": ["Scenario"],
            "on": "pointerover"
          }
        }
      ],
      "mark": {
        "type": "line",
        "strokeWidth": 8,
        "stroke": "transparent",
        "point": true
      }
    },
    {"mark": "line"},
    {
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"aggregate": {"argmax": "Value"}, "field": "price"}
      },
      "layer": [
        {"mark": {"type": "circle"}},
        {
          "mark": {"type": "text", "align": "left", "dx": 4},
          "encoding": {"text": {"field": "Scenario", "type": "nominal"}}
        }
      ]
    }
  ],
  "config": {
    "legend": {
      "fillColor": "#ffffff",
      "strokeColor": "black",
      "padding": 5,
      "symbolType": "stroke"
    }
  }
}
