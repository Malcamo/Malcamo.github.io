{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Ukrainian Grain Imports",
      "anchor": "start",
      "subtitle": "KG | Source UN COMTRADE through ECO API",
      "fontSize": 24,
      "subtitleFontSize": 12,
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "height": 250,
    "width": "container",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#0057b7",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/ukr/gimpo?vega",
      "format": {
        "type": "json"
      }
    },
    "mark": {
      "type": "area",
      "color": "#ffdd00",
      "strokeWidth": 2
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "Date",
          "titleColor": "#122B39",
          "grid": false
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "Amount imported in Kg",
          "titleColor": "#122B39",
          "grid": false
        }
      }
    }
  }